<% unless p("cf_networking.disable") || p("cf_networking.host_only") %>
<%
  def ip
    p("cf_networking.policy_server.listen_ip")
  end

  def port
    p("cf_networking.policy_server.listen_port")
  end
%>

curl <%= ip %>:<%= port %>/health \
  --connect-timeout <%= p("cf_networking.policy_server.connect_timeout_seconds") %>
<% end %>
